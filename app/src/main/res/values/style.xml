<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="android:textColorHighlight">?attr/colorPrimaryContainer</item>
    </style>

    <style name="TranslateText" parent = "Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textColorHighlight">?attr/colorPrimaryContainer</item>
    </style>

    <style name="TranscriptionText" parent = "Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <style name="SearchFloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="tint">@color/black</item>
    </style>
    
    <style name="SearchCardView" parent="Widget.Material3.CardView.Outlined">
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/black</item>
    </style>

</resources>